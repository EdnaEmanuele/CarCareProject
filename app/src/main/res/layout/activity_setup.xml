<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetupActivity"
    android:background="@drawable/background">

    <!-- Biblioteca importada -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setup_profile_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/profile" />

    <EditText
        android:id="@+id/setup_company_name"
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/setup_profile_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="@drawable/inputs"
        android:drawableLeft="@drawable/at_icon"
        android:ems="10"
        android:gravity="start|top"
        android:hint="    Company name"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColorHint="@color/LightGrey" />

    <EditText
        android:id="@+id/setup_user_name"
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/setup_company_name"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="    Your name"
        android:drawableLeft="@drawable/user"
        android:inputType="textMultiLine"
        android:background="@drawable/inputs"
        android:padding="10dp"
        android:textColorHint="@color/LightGrey"/>

    <EditText
        android:id="@+id/setup_address"
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/setup_user_name"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="    Address"
        android:drawableLeft="@drawable/location"
        android:inputType="textMultiLine"
        android:background="@drawable/inputs"
        android:padding="10dp"
        android:textColorHint="@color/LightGrey"/>

    <Button
        android:id="@+id/setup_btn_save"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/setup_address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/button"
        android:text="SAVE"
        android:textColor="@color/White"
        android:textSize="15dp"
        android:textStyle="bold" />


</RelativeLayout>